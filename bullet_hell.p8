pico-8 cartridge // http://www.pico-8.com
version 43
__lua__
player_x = 64
player_y = 64
bullet_active = false

function _update()
	// player movement
	if (btn(0) and player_x > 0) then player_x -= 1 end
	if (btn(1) and player_x < 120) then player_x += 1 end
	if (btn(2) and player_y > 0) then player_y -= 1 end
	if (btn(3) and player_y < 120) then player_y += 1 end
	
	if (not bullet_active) then
		bulletspawn_side = flr(rnd(5))
		bulletspawn_pos = flr(rnd(128))
		bullet_active = true
	end
	
end

function _draw()
	cls(1)
	spr(1, player_x, player_y)
	
	if bulletspawn_side==0
		then spr(2, 0, bulletspawn_pos)

	elseif bulletspawn_side==1
		then spr(2, 127, bulletspawn_pos)

	elseif bulletspawn_side==2
		then spr(2, bulletspawn_pos, 0)
		
	else
		spr(2, bulletspawn_pos, 127)
	end
end
